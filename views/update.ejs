<!-- Contains Head, CDNs and NavBar Quick access buttons -->
<%-include('partials/head.ejs') %>



    <!-- Form for adding new dish to db.foodBucket.buckets  -->
    <div class="container" style="height: 100vh">
      <section class="d-flex justify-content-center">
        <form class="row g-3 needs-validation w-75 pb-4" novalidate method="POST" action="/home/<%= dish._id %>?_method=PATCH">
            <!-- dish name -->
           <div class="col-md-5">
            <label for="dish" class="form-label"
              ><i class="bi bi-cup-hot"></i> Dish</label
            >
            <input
              type="text"
              class="form-control"
              id="dish"
              name="dish"
              placeholder="Butter Garlic Shrimps"
              value="<%- dish.dish %> "
              required
            />
            <div class="valid-feedback">Looks good!</div>
          </div>

           <!-- Price -->
           <div class="col-md-2">
            <label for="price" class="form-label"
              ><i class="bi bi-currency-dollar"></i>  Price</label
            >
            <input
              type="number"
              class="form-control"
              id="price"
              name="price"
              placeholder="26.89"
              value="<%= dish.price %>"
              required
            />
            <div class="valid-feedback">Looks good!</div>
          </div>

          <!-- Restaurant name -->

          <div class="col-md-5">
            <label for="dish" class="form-label"
              ><i class="bi bi-house-heart"></i> Restaurant</label
            >
            <input
              type="text"
              class="form-control"
              id="restaurant"
              name="restaurant"
              placeholder="The Keg Steakhouse & Bar"
              value="<%= dish.restaurant %>"
              required
            />
            <div class="valid-feedback">Looks good!</div>
          </div>

          <!-- Address / Street -->
          <div class="col-md-7">
            <label for="address" class="form-label"
              ><i class="bi bi-signpost-split"></i> Street</label
            >
            <input
              type="text"
              class="form-control"
              id="address"
              name="address"
              placeholder="560 King St W"
              value="<%= dish.address %>"
              required
            />
            <div class="valid-feedback">Looks good!</div>
          </div>

          <!-- City -->
          <div class="col-md-3">
            <label for="city" class="form-label"
              ><i class="bi bi-building"></i> City</label
            >
            <input
              type="text"
              class="form-control"
              id="city"
              name="city"
              placeholder="Toronto"
              value="<%= dish.city %>"
              required
            />
            <div class="valid-feedback">Looks good!</div>
          </div>

           <!-- Province -->
   
           <div class="col-md-2">
            <label for="province" class="form-label"
              ><i class="bi bi-layout-wtf"></i> Province</label
            >
            <input
              type="text"
              class="form-control"
              id="province"
              name="province"
              placeholder="Ontario"
              value="<%= dish.province %>"
              required
            />
            <div class="valid-feedback">Looks good!</div>
          </div>

          <!-- Postal Code -->
   
          <div class="col-md-2">
            <label for="postalCode" class="form-label"
              ><i class="bi bi-mailbox"></i> Postal Code</label
            >
            <input
              type="text"
              class="form-control"
              id="postalCode"
              name="postalCode"
              placeholder="M5V 1M3"
              value="<%= dish.postalCode %>"
              required
            />
            <div class="valid-feedback">Looks good!</div>
          </div>

          <!-- Country -->
   
          <div class="col-md-2">
            <label for="country" class="form-label"
              ><i class="bi bi-flag"></i> Country</label
            >
            <input
              type="text"
              class="form-control"
              id="country"
              name="country"
              placeholder="CA"
              value="<%= dish.country %>"
              required
            />
            <div class="valid-feedback">Looks good!</div>
          </div>

          <!-- Website -->
          <div class="col-md-8">
            <label for="websites" class="form-label"
              ><i class="bi bi-link-45deg"></i> Website</label
            >
            <input
              type="text"
              class="form-control"
              id="websites"
              name="websites"
              placeholder="https://kegsteakhouse.com/en/locations/toronto-king-west"
              value="<%= dish.websites %>"
            />
            <div class="valid-feedback">Optional</div>
          </div>

          <!-- ImgURL -->
          <div class="col-md-12">
            <label for="imgURL" class="form-label"
              ><i class="bi bi-file-image"></i> Image URL</label
            >
            <input
              type="text"
              class="form-control"
              id="imgURL"
              name="imgURL"
              value="<%= dish.imgURL %>"
              placeholder="https://www.onceuponachef.com/images/2014/03/Easy-Garlic-Butter-Shrimp-1.jpg"
            />
            <div class="valid-feedback">Optional but recommended</div>
          </div>

          <!-- category -->
          <div class="col-md-12">
            <label for="category" class="form-label"
              ><i class="bi bi-bookmark-plus"></i> Tags</label
            >
            <input
              type="text"
              class="form-control tags-customLook"
              id="category"
              name="category"
              placeholder='Use "," for separating the tags.'
              value="<%= dish.category %>"
            />
            <div class="valid-feedback">Optional</div>
          </div>


          <!-- description -->
          <div class="col-md-12">
            <label for="description" class="form-label"
              ><i class="bi bi-card-text"></i> Description</label
            >
            <textarea class="form-control" id="description" name="description" rows="3" placeholder="Write something..."><%= dish.description %></textarea>
            <div class="valid-feedback">Optionl</div>
          </div>

          <div class="col-12">
            <button class="btn btn-primary" type="submit">Update Dish</button>
          </div>
        </form>
    </section>

    <!-- Delete Button -->

    <section class="d-flex justify-content-center pb-4">
      <form action="/home/<%= dish._id %>?_method=DELETE" method="post">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
          <i class="bi bi-trash3"></i>
        </button>
        
        <!-- Modal -->
        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                Are you sure you want to delete this dish?
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                <button type="submit" class="btn btn-danger">Yes</button>
              </div>
            </div>
          </div>
        </div>
      </form>
    </section>
      
    <!-- ---------------------- Script ------------------------ -->

    <script>
    // Form input validation for making sure the feild is not empty
    (function () {
      "use strict";
      // Fetch all the forms we want to apply custom Bootstrap validation styles to
      var forms = document.querySelectorAll(".needs-validation");
      // Loop over them and prevent submission
      Array.prototype.slice.call(forms).forEach(function (form) {
        form.addEventListener(
          "submit",
          function (event) {
            if (!form.checkValidity()) {
              event.preventDefault();
              event.stopPropagation();
            }
            form.classList.add("was-validated");
          },
          false
        );
      });
    })();
    //   Creates tag using Tagify
    const categories = document.querySelector("input[name=category]");
    let tagify = new Tagify(categories, {
      originalInputValueFormat: (valuesArr) => valuesArr.map((item) => item.value) //returns string instead of JSON
    });
    </script>
  </body>
</html>
