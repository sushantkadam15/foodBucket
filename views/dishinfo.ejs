<!-- Contains Head, CDNs and NavBar Quick access buttons -->
<%- include('partials/head.ejs') %>
<div class="container mb-4">
  <div class="row">
    <div class="col-md-6">
      <img src="<%= dish.imgURL %> " alt="<%= dish.dish %>" class="img-fluid" />
    </div>
    <div class="col-md-6">
      <div class="row">
        <p class="fw-lighter"><%= dish.restaurant %></p>
      </div>
      <div class="row">
        <div class="col-10">
          <h1><%= (dish.dish).toUpperCase() %></h1>
        </div>
        <div class="col-2">
          <form action="/home/<%= dish._id %>/edit" method="get">
            <button type="submit" class="btn btn-outline-success edit" title="Edit">
              <i class="bi bi-pencil-square"></i>
            </button>
          </form>
        </div>
      </div>
      <div class="row">
        <div class="col mb-2">
          <h6>Price: $<%= dish.price %></h6>
        </div>
      </div>
      <div class="row">
        <h5>Location</h5>
        <p>
          <span class="d-block"><%= dish.address %>,</span>
          <span class="d-block"
            ><%= dish.city %>, <%= dish.province %> <%= dish.country %></span
          >
          <span class="d-block"><%= dish.postalCode %></span>
          <a href="<%= dish.websites %>" target="_blank">Website</a>
        </p>
      </div>
      <div class="row">
        <hr>
        <h5>Description</h5>
            <% if(dish.description){ %>
                <p class="fw-light"><%= dish.description %> </p>
              <% } else{ %>  
                <p>N/A</p>
             <% } %>
        </p>
      </div>
      <div class="row mb-3">
        <hr>
        <h5 class="mb-3">Tags</h5>
        <div class="hstack gap-3 d-flex flex-wrap">
          <% for(let category of dish.category) {%>
          <div class="row border rounded mx-1 categories">
            <div><%= category %></div>
          </div>
          <% } %>
        </div>
      </div>
    </div>
    <div class="row">
    <hr>
      <!-- Form for review -->
      <form action="/home/<%=dish._id%>/review" method="post" class="mb-3 mt-3">
        <h5 class="mb-3"> Leave a Review</h5>
        <div class="form-group d-flex justify-content-between">
          <label for="rating"> Rate Your Experience:</label>
          <select class="form-control w-25" id="rating">
            <option value="1">1 - Bad</option>
            <option value="2">2 - Okay</option>
            <option value="3">3 - Good</option>
            <option value="4">4 - Very Good</option>
            <option value="5" selected>5 - Excellent</option>
          </select>
        </div>
        <div class="form-group">
          <label for="comment" class="mb-1">Share Your Experience:</label>
          <textarea class="form-control" id="exampleFormControlTextarea4" rows="3"></textarea>
        </div>
        <div class="mt-3">
          <button class="btn btn-primary" type="submit">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>